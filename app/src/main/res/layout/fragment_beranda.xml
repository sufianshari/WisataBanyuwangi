<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context="com.banyuwangi.wisatabanyuwangi.fragments.BerandaFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/banyuwangi"
        android:layout_gravity="center"
        android:id="@+id/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/logo">

        <Button
            android:id="@+id/btnWisataAlam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_green_500"
            android:text="Wisata Alam" />

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btnWisataSejarah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_green_500"
            android:text="Wisata Sejarah" />

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btnWisataKeluarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_green_500"
            android:text="Wisata Keluarga" />

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btnWisataBudaya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_green_500"
            android:text="Wisata Budaya" />

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btnPeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_green_500"
            android:text="Wisata Budaya" />
    </LinearLayout>


    <!--

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_home"
        android:textSize="30dp"
        android:id="@+id/textView" />
    -->

</RelativeLayout>


